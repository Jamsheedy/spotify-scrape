{
	"name": "pl_user_leagues",
	"properties": {
		"activities": [
			{
				"name": "Get matchups",
				"type": "Copy",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "set_leagues_filename",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"supportRFC5988": "true"
						}
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_sleeper",
						"type": "DatasetReference",
						"parameters": {
							"par_rel_url": {
								"value": "@concat('user/', pipeline().parameters.par_user_id, '/leagues/nfl/', pipeline().parameters.par_season)",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_json_gen",
						"type": "DatasetReference",
						"parameters": {
							"FILE_SYS": "raw",
							"DIR": "sleeper/leagues",
							"FILE_NM": "test.json"
						}
					}
				]
			},
			{
				"name": "set_leagues_filename",
				"type": "SetVariable",
				"dependsOn": [],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "var_filename",
					"value": {
						"value": "@concat('player_leagues_' ,pipeline().parameters.par_user_id, '_', utcnow('yyyyMMddhhmmss'), '.json')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"par_user_id": {
				"type": "string",
				"defaultValue": "731951672686936064"
			},
			"par_season": {
				"type": "string",
				"defaultValue": "2023"
			}
		},
		"variables": {
			"var_filename": {
				"type": "String"
			}
		},
		"folder": {
			"name": "sleeper"
		},
		"annotations": []
	}
}